<?xml version="1.0" encoding="UTF-8"?>

<!-- Importações necessárias para os componentes JavaFX utilizados -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<!-- Raiz VBox: Contêiner principal com espaçamento vertical e estilo -->
<VBox spacing="15" styleClass="form-container" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BackEnd.controller.RegistrarPedidoController">

    <!-- Cabeçalho da Janela -->
    <VBox styleClass="form-header" alignment="CENTER">
        <Label text="Registro de Pedido" styleClass="form-title"/>
        <Label text="Preencha os dados do pedido" styleClass="form-subtitle"/>
    </VBox>

    <!-- GridPane: Organiza os campos de entrada principais em um grid -->
    <GridPane hgap="20" vgap="10"> <!-- Espaçamento horizontal e vertical entre células -->

        <!-- Linha 0: Seleção do Cliente -->
        <Label text="Cliente:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="cbCliente" promptText="Selecione o Cliente" styleClass="form-combo" GridPane.columnIndex="1" GridPane.rowIndex="0" minWidth="300"/> <!-- prefWidth Infinity para ocupar espaço disponível -->

        <!-- Linha 1: Data do Pedido -->
        <Label text="Data do Pedido:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <DatePicker fx:id="dpDataPedido" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1" minWidth="150"/>

        <!-- Linha 2: Data de Retorno (Opcional) -->
        <Label text="Data de Retorno:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="dpDataRetorno" promptText="(Opcional)" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="2" minWidth="150"/>

        <!-- Linha 3: Forma de Pagamento (NOVO CAMPO) -->
        <Label text="Forma de Pagamento:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="cbTipoPagamento" promptText="Selecione o Pagamento" styleClass="form-combo" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="300"/>

        <!-- Linha 4: Observações (Ajustado rowIndex devido à adição da Forma de Pagamento) -->
        <Label text="Observações:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.valignment="TOP"/> <!-- Alinhamento vertical ao topo para o Label -->
        <TextArea fx:id="txtObservacoes" promptText="Digite observações adicionais..." styleClass="form-field" style="-fx-min-height: 120; -fx-min-width: 600;" GridPane.columnIndex="1" GridPane.rowIndex="4" prefRowCount="3" wrapText="true"/> <!-- Altura mínima, quebra de texto -->

        <!-- Definição das restrições das colunas do GridPane -->
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="140.0" prefWidth="140.0" /> <!-- Coluna 0: Largura fixa para labels -->
            <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" /> <!-- Coluna 1: Cresce para preencher espaço -->
        </columnConstraints>

        <!-- Linhas de RowConstraints não são estritamente necessárias aqui, mas podem ser usadas para definir alturas -->
        <!-- <rowConstraints> ... </rowConstraints> -->

    </GridPane> <!-- Fim do GridPane -->

    <!-- Botão para abrir a janela de seleção de produtos -->
    <Button fx:id="btnAdicionarProdutos" text="Adicionar Produtos ao Pedido" onAction="#abrirJanelaAdicionarProdutos" styleClass="btn-primary" maxWidth="Infinity"/>

    <!-- Tabela para exibir os itens adicionados ao pedido -->
    <TableView fx:id="tvItensPedido" VBox.vgrow="ALWAYS" editable="true" minHeight="200.0" prefHeight="250.0"> <!-- Altura mínima e preferida, permite crescimento vertical -->
        <columns>
            <!-- Definição das colunas da tabela -->
            <TableColumn fx:id="colunaId" text="ID" prefWidth="50" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="colunaNome" text="Produto" prefWidth="200"/>
            <TableColumn fx:id="colunaPrecoVenda" text="Preço Venda" prefWidth="100" style="-fx-alignment: CENTER-RIGHT;"/>
            <TableColumn fx:id="colunaUnidadeMedida" text="Unid." prefWidth="70" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="colunaQuantidade" text="Quantidade" prefWidth="100" style="-fx-alignment: CENTER-RIGHT;"/>
            <TableColumn fx:id="colunaQtdAtual" text="Qtd. Disp." prefWidth="90" style="-fx-alignment: CENTER-RIGHT;"/>
            <TableColumn fx:id="colunaQtdEstoque" text="Estoque" prefWidth="90" style="-fx-alignment: CENTER-RIGHT;"/>
            <TableColumn fx:id="colunaCategoria" text="Categoria" prefWidth="120"/>
            <TableColumn fx:id="colunaAcoes" text="Ações" prefWidth="90" style="-fx-alignment: CENTER;"/>
        </columns>
        <!-- Política de redimensionamento: colunas preenchem a largura da tabela -->
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <!-- Placeholder: Mensagem exibida quando a tabela está vazia -->
        <placeholder>
            <Label text="Nenhum item adicionado."/>
        </placeholder>
    </TableView> <!-- Fim da TableView -->

    <!-- HBox para exibir os totais do pedido -->
    <HBox spacing="20" alignment="CENTER_RIGHT"> <!-- Espaçamento e alinhamento à direita -->
        <Label fx:id="lblQuantidadeTotal" text="Quantidade Total: 0.00" style="-fx-text-fill: white;" styleClass="label-total"/>
        <Label fx:id="lblValorTotal" text="Valor Total: R$ 0,00" styleClass="label-total" style="-fx-text-fill: white;" />
        <!-- Margem superior para separar dos elementos acima -->
        <HBox.margin>
            <Insets top="5.0"/>
        </HBox.margin>
    </HBox> <!-- Fim do HBox dos totais -->

    <!-- HBox para os botões de ação (Cancelar e Salvar) -->
    <HBox spacing="10" alignment="CENTER_RIGHT"> <!-- Espaçamento entre botões e alinhamento à direita -->
        <Button fx:id="btnCancelar" text="Cancelar" onAction="#cancelar" styleClass="btn-secondary" cancelButton="true"/> <!-- Botão de cancelamento padrão -->
        <Button fx:id="btnSalvar" text="Salvar Pedido" onAction="#salvarPedido" styleClass="btn-primary" defaultButton="true"/> <!-- Botão de confirmação padrão -->
        <!-- Margem superior para separar dos elementos acima -->
        <HBox.margin>
            <Insets top="15.0"/>
        </HBox.margin>
    </HBox> <!-- Fim do HBox dos botões -->

    <!-- Padding geral aplicado ao contêiner raiz VBox -->
    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/> <!-- Espaçamento interno -->
    </padding>

    <!-- Referência à folha de estilo CSS utilizada -->
    <stylesheets>
        <URL value="@../styles/styles.css"/>
    </stylesheets>

</VBox> <!-- Fim do VBox raiz -->